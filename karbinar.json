{
    "description": "Map Ctrl+C/X/V/A/Z to Cmd equivalents (with terminal-specific copy/paste remaps)",
    "manipulators": [
        {
            "conditions": [
                {
                    "bundle_identifiers": [
                        "^com\\.apple\\.Terminal$",
                        "^com\\.googlecode\\.iterm2$",
                        "^dev\\.warp\\.WarpTerminal$",
                        "^com\\.todesktop\\.230313mzl4w4u92$"
                    ],
                    "type": "frontmost_application_unless"
                }
            ],
            "from": {
                "key_code": "c",
                "modifiers": { "mandatory": ["control"] }
            },
            "to": [
                {
                    "key_code": "c",
                    "modifiers": ["command"]
                }
            ],
            "type": "basic"
        },
        {
            "from": {
                "key_code": "x",
                "modifiers": { "mandatory": ["control"] }
            },
            "to": [
                {
                    "key_code": "x",
                    "modifiers": ["command"]
                }
            ],
            "type": "basic"
        },
        {
            "from": {
                "key_code": "v",
                "modifiers": { "mandatory": ["control"] }
            },
            "to": [
                {
                    "key_code": "v",
                    "modifiers": ["command"]
                }
            ],
            "type": "basic"
        },
        {
            "from": {
                "key_code": "a",
                "modifiers": { "mandatory": ["control"] }
            },
            "to": [
                {
                    "key_code": "a",
                    "modifiers": ["command"]
                }
            ],
            "type": "basic"
        },
        {
            "from": {
                "key_code": "z",
                "modifiers": { "mandatory": ["control"] }
            },
            "to": [
                {
                    "key_code": "z",
                    "modifiers": ["command"]
                }
            ],
            "type": "basic"
        },
        {
            "conditions": [],
            "from": {
                "key_code": "c",
                "modifiers": { "mandatory": ["control", "shift"] }
            },
            "to": [
                {
                    "key_code": "c",
                    "modifiers": ["command"]
                }
            ],
            "type": "basic"
        },
        {
            "conditions": [],
            "from": {
                "key_code": "v",
                "modifiers": { "mandatory": ["control", "shift"] }
            },
            "to": [
                {
                    "key_code": "v",
